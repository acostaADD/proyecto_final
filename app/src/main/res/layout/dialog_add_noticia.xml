<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para el título de la noticia -->
    <EditText
        android:id="@+id/etTituloNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título de la noticia"
        android:textSize="16sp"/>

    <!-- Campo para la descripción de la noticia -->
    <EditText
        android:id="@+id/etDescripcionNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción de la noticia"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:minHeight="100dp"
        android:gravity="top"
        android:inputType="textMultiLine"/>

    <!-- Botón para seleccionar imagen -->
    <Button
        android:id="@+id/btnSeleccionarImagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Imagen"
        android:layout_marginTop="8dp"/>

    <!-- Vista previa de la imagen seleccionada -->
    <ImageView
        android:id="@+id/ivPreviewNoticia"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone"/>
</LinearLayout>